{
  // Svelte
  "[svelte]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },

  // ---Looks---
  // Colors and theme
  "editor.tokenColorCustomizations": {
    "[Midnight City]": {
      "comments": "#49cfa7"
    },
    "[SynthWave '84]": {
      "comments": "#338b71"
    }
  },
  "workbench.colorCustomizations": {
    "[Midnight City]": {
      "editor.selectionBackground": "#666666",
      "editor.selectionHighlightBackground": "#666666"
    },
    "[SynthWave '84]": {
      "editor.selectionBackground": "#666666",
      "editor.selectionHighlightBackground": "#666666"
    }
  },
  "workbench.colorTheme": "Midnight City",
  // Fonts and ligatures
  "editor.fontLigatures": true,
  "editor.fontFamily": "'Jetbrains Mono', 'SF Mono Powerline', 'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.renderWhitespace": "none",
  "editor.fontSize": 14,
  "terminal.integrated.fontFamily": "'Jetbrains Mono', 'Meslo LG M for Powerline'",
  // Other
  "editor.minimap.enabled": false,
  "clock.dateFormat": "| mmm dS | HH:MM |", // Clock in status bar
  "explorer.openEditors.visible": 0, // hide openEditors thing in sidebar

  // snippets
  "editor.snippetSuggestions": "top",

  // Gitlens
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false
  },
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.statusBar.enabled": false,

  // Move/delete files
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "javascript.updateImportsOnFileMove.enabled": "always",

  // Liveshare
  "liveshare.featureSet": "insiders",

  // Stylelint
  // "css.validate": false, // since stylelint will do this
  "stylelint.validate": ["css"],

  // Prettier
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },

  "editor.formatOnSave": true,

  "workbench.startupEditor": "newUntitledFile",
  "extensions.ignoreRecommendations": true,

  "editor.bracketPairColorization.enabled": true,

  // Hide colors and badges in tabs
  "workbench.editor.decorations.colors": false,
  "workbench.editor.decorations.badges": false,
  "redhat.telemetry.enabled": false,
  "stylelint.configFile": "packages/stylelint-config/.stylelintrc.js",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "telemetry.telemetryLevel": "off",
  "rust-analyzer.inlayHints.renderColons": false,
  "window.zoomLevel": 2,
  "markdown.marp.exportType": "html",
  "markdown.marp.enableHtml": true
}
